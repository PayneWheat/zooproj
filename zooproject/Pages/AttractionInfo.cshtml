@page
@model AttractionInfoModel
@{
    ViewData["Title"] = "Attraction Info Page";
}

<style>

    body {
        background-color: #355e3b;
        font-size: large;
    }


    #attractions {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #attractions td, #attractions th {
            border: 1px solid white;
            padding: 15px;
        }

        #attractions tr:nth-child(even) {
            background-color: #eeeeee;
        }
        #attractions tr:nth-child(odd) {
            background-color: white;
        }

        #attractions tr:hover {
            background-color: #ddd;
        }

        #attractions th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #ede4c8;
            color: black;
        }
</style>

<h1 style="border: 5px solid white; background-color: #ede4c8; padding: 10px;">Attraction Info</h1>
<br />
<!-- Table for results of Attraction-->
<table id="attractions" style="width:100%; border:1px solid black; padding:15px">
    <!-- Column Names-->
    <tr>
        <th>Name</th>
        <th>Open</th>
        <th>Description</th>
        <th>Animal Info</th>
    </tr>

    <!-- Column Values-->
    @for (int i = 0; i < Model.IDResults.Count; i++)
    {
        <tr>
            <td>@Model.NameResults[i]</td>
            <td>@Model.OpenResults[i]</td>
            <td>@Model.DescriptionResults[i]</td>
            <td>
                @{if (@Model.AttractionChoice != Model.IDResults[i].ToString())
                    {
                        <form method="get">
                            <input type="submit" name="Animals" value="@Model.IDResults[i]" />
                        </form>
                    }

                    else
                    {
                        for (int j = 0; j < Model.AnimalList.Count; j++)
                        {
                            <p>@Model.AnimalList[j] </p>
                        }
                    }
                }
            </td>
        </tr>
    }
</table>