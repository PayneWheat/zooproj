@page
@model ProductCatalogModel
@{
    ViewData["Title"] = "Product Catalog Page";
}

<style>
    body {
        background-color: #355e3b;
        font-family: Arial;
        font-size: large;
    }

    #products {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #products td, #products th {
            border: 1px solid white;
            padding: 15px;
        }

        #products tr:nth-child(even) {
            background-color: #eeeeee;
        }
        #products tr:nth-child(odd) {
            background-color: white;
        }

        #products tr:hover {
            background-color: #ddd;
        }

        #products th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #ede4c8;
            color: black;
        }
</style>

<h1 style="border: 5px solid white; background-color: #ede4c8; padding: 10px;">Product Catalog</h1>
<br />
<!-- Table for results of Attraction-->
<table id="products">
    <!-- Column Names-->
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
    </tr>

    <!-- Column Values-->
    @for (int i = 0; i < Model.IDResults.Count; i++)
    {
        <tr>
            <td>@Model.IDResults[i]</td>
            <td>@Model.NameResults[i]</td>
            <td>$@Model.PriceResults[i]</td>
            <td>@Model.DescriptionResults[i]</td>
        </tr>
    }
</table>
