@page
@model InsertModel
@{
}

<style>
    #insertion {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    #insertion td, #insertion th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    #insertion tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    #insertion tr:hover {
        background-color: #ddd;
    }

    #insertion th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #4CAF50;
        color: white;
    }
</style>


<br />
<br />

@{
<form method="post">
    <div>
        <label for="Entity">Entity to INSERT INTO</label>
        <input type="text" name="entityType" value="@Model.whichEntity" />
        <br />
        <input type="submit" value="Choose" /><br />
    </div>

    @if (Model.whichEntity == "TITLE_TYPE")
    {
        <p>TITLE_TYPE CHOSEN</p>

        <div>
            <table id="insertion" style="width:100%; border:1px solid black; padding:15px">
                <!-- Column Names-->
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                </tr>

                <!-- Column Values-->
                <tr>
                    <td><input type="text" name="insertID" value="ID" /></td>
                    <td><input type="text" name="insertTYpe" value="Type" /></td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Insert" />
        </div>
    }

    @if (Model.whichEntity == "ATTRACTION")
    {
        <p>Attraction Chosen</p>
        <div>
            <table id="insertion" style="width:100%; border:1px solid black; padding:15px">
                <!-- Column Names-->
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Open</th>
                    <th>Open Date</th>
                    <th>ManagerID</th>
                    <th>Manager Start Date</th>
                    <th>Description</th>
                </tr>

                <!-- Column Values-->
                <tr>
                    <td><input type="text" name="insertID" value="ID" /></td>
                    <td><input type="text" name="insertType" value="Type" /></td>
                    <td><input type="text" name="insertOpen" value="Open/Closed" /></td>
                    <td><input type="text" name="insertOpenDate" value="Open Date" /></td>
                    <td><input type="text" name="insertManager" value="ManagerID" /></td>
                    <td><input type="text" name="insertManagerDate" value="Manager Start Date" /></td>
                    <td><input type="text" name="insertDescription" value="Description" /></td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Insert" />
        </div>
    }

    @if (Model.whichEntity == "PRODUCT")
    {
        <p>Product Chosen</p>
        <div>
            <table id="insertion" style="width:100%; border:1px solid black; padding:15px">
                <!-- Column Names-->
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                </tr>

                <!-- Column Values-->
                <tr>
                    <td><input type="text" name="insertID" value="ID" /></td>
                    <td><input type="text" name="insertType" value="Type" /></td>
                    <td><input type="text" name="insertPrice" value="Price" /></td>
                    <td><input type="text" name="insertDescription" value="Desecription" /></td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Insert" />
        </div>
    }


</form>
}
<p>@Model.AMessage</p>
<p>@Model.dbCommand</p>
<p>@Model.EMessage</p>